{
  "references": [
    { "path": "packages/types" },
    { "path": "packages/ui" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@cms/*": ["apps/cms/src/*"],
      "@payload-config": ["apps/cms/src/payload.config.ts"],
      "@types/*": ["packages/types/src/*"],
      "@ui/*": ["packages/ui/src/*"]
    },
    "target": "ES2022",
    "outDir": "dist",
  },
  "exclude": [
    "**/*.js",
    "**/*.mjs"
  ]
}
