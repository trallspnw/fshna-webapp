{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "composite": false,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@cms/*": ["apps/cms/src/*"],
      "@site/*": ["apps/site/src/*"],
      "@payload-config": ["apps/cms/src/payload.config.ts"],
      "@common/*": ["packages/common/src/*"],
      "@common": ["packages/common/src/index.ts"],
    },
    "target": "ES2022"
  },
  "exclude": [
    "**/*.js",
    "**/*.mjs"
  ]
}
