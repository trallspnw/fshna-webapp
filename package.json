{
  "name": "fshna-webapp",
  "version": "1.0.0",
  "description": "FSHNA webapp monorepo with CMS, site, and shared packages.",
  "type": "module",
  "private": true,
  "license": "UNLICENSED",
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "cms": "pnpm --filter cms dev",
    "cms:dotenv": "pnpm dotenv -e .env -- pnpm cms",
    "site": "pnpm clean:site && pnpm --filter site dev",
    "db": "docker compose up postgres",
    "clean": "pnpm -r exec rm -rf dist .next node_modules out && rm -rf .pnpm-store node_modules",
    "clean:site": "rm -rf apps/site/.next apps/site/out",
    "types": "TYPEGEN=1 pnpm --filter cms generate:types",
    "prisma:generate": "pnpm prisma generate --schema apps/cms/prisma/schema.prisma",
    "prisma:push": "pnpm prisma db push --schema apps/cms/prisma/schema.prisma",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/webhooks/stripe"
  },
  "dependencies": {
    "@mantine/core": "^8.1.2",
    "@mantine/form": "^8.1.2",
    "@mantine/hooks": "^8.1.2",
    "@payloadcms/db-postgres": "3.43.0",
    "@payloadcms/email-nodemailer": "^3.49.0",
    "@payloadcms/next": "3.43.0",
    "@payloadcms/payload-cloud": "3.43.0",
    "@payloadcms/richtext-lexical": "3.43.0",
    "@payloadcms/ui": "3.43.0",
    "@prisma/client": "^6.12.0",
    "@stripe/stripe-js": "^7.5.0",
    "@tabler/icons-react": "^3.34.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^4.1.0",
    "graphql": "^16.11.0",
    "lru-cache": "^11.1.0",
    "next": "15.3.4",
    "payload": "3.43.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "0.34.2",
    "stripe": "^18.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/eslint-plugin-next": "^15.3.4",
    "@types/node": "^24.0.3",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.29.0",
    "eslint-config-next": "15.3.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.5.3",
    "prisma": "^6.12.0",
    "sass": "^1.89.2",
    "sass-embedded": "^1.89.2",
    "serve": "^14.2.4",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  }
}
